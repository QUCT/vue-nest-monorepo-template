generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"] // 开启多scheme模式
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma" // 关联模式切换为非外键
}

