  "configurations": [
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "pnpm --filter ./packages/back-end run start:debug"
      ],
      "runtimeExecutable": "npm",
      "runtimeVersion": "22.2.0",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Backend",
      "runtimeExecutable": "pnpm",
      "args": ["--filter", "./packages/back-end", "run", "start:debug"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "",
      "outFiles": ["${workspaceFolder}/packages/back-end/dist/**/*.js"]
    }
  ]
}
